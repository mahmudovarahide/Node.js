extends /layouts/layout.pug

block content
    main.main-section
        if prods.length > 0
            .d-flex 
                each products in prods 
                    .box 
                        h1 #{products.title}
                        .image-box 
                            img(src="https://www.clipartqueen.com/image-files/stable-colored-books.png" alt="")
                        .price-box 
                            h6 19$
        else 
            h1 Not Found Products
